{
  "name": "arkiver",
  "version": "1.0.3",
  "description": "Data framework for Ethereum designed for speed and ergonomics.",
  "module": "./src/index.ts",
  "types": "./src/index.d.ts",
  "bin": {
    "arkiver": "./bin.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.ts"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Robo-Labs/arkiver.git"
  },
  "bugs": {
    "url": "https://github.com/Robo-Labs/arkiver/issues"
  },
  "type": "module",
  "scripts": {
    "buidl": "tsc && bun copyfiles",
    "copyfiles": "cp README.md dist/ && cp ../../LICENSE dist/ && cp -r ./src/core/tables/migrations dist/src/core/tables/migrations",
    "genmigr": "bunx drizzle-kit generate:sqlite --schema ./src/core/tables --out ./src/core/tables/migrations"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.24",
    "@types/dockerode": "^3.3.21",
    "abitype": "^0.9.8",
    "bun-types": "latest",
    "citty": "^0.1.4",
    "pino-pretty": "^10.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "async-mutex": "^0.4.0",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "dockerode": "^4.0.0",
    "drizzle-kit": "^0.20.6",
    "drizzle-orm": "^0.29.1",
    "eventemitter3": "^5.0.1",
    "lru-cache": "^10.1.0",
    "pg": "^8.11.3",
    "pino": "^8.16.2",
    "pino-abstract-transport": "^1.1.0",
    "postgres": "^3.4.3",
    "viem": "^1.19.11"
  }
}
