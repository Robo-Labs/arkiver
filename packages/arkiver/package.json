{
  "name": "arkiver",
  "version": "1.0.1",
  "description": "Data framework for Ethereum designed for speed and ergonomics.",
  "module": "./src/index.ts",
  "types": "./src/index.d.ts",
  "bin": {
    "arkiver": "./bin.ts"
  },
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./src/index.ts"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Robo-Labs/arkiver.git"
  },
  "bugs": {
    "url": "https://github.com/Robo-Labs/arkiver/issues"
  },
  "type": "module",
  "scripts": {
    "buidl": "tsc && bun copyfiles",
    "copyfiles": "cp README.md dist/ && cp ../../LICENSE dist/ && cp -r ./src/core/tables/migrations dist/src/core/tables/migrations",
    "genmigr": "bunx drizzle-kit generate:sqlite --schema ./src/core/tables --out ./src/core/tables/migrations"
  },
  "devDependencies": {
    "abitype": "^0.9.8",
    "bun-types": "latest",
    "citty": "^0.1.4",
    "pino-pretty": "^10.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "async-mutex": "^0.4.0",
    "drizzle-kit": "^0.19.13",
    "drizzle-orm": "^0.28.6",
    "eventemitter3": "^5.0.1",
    "lru-cache": "^10.0.1",
    "pg": "^8.11.3",
    "pino": "^8.15.1",
    "postgres": "3.3.5",
    "viem": "^1.12.0"
  }
}
